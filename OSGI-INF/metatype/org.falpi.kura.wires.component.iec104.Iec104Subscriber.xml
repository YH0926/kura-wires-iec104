<?xml version="1.0" encoding="UTF-8"?>
<MetaData xmlns="http://www.osgi.org/xmlns/metatype/v1.2.0" localization="en_us">
	<OCD id="org.falpi.kura.wires.component.iec104.Iec104Subscriber"
		name="IEC-104 Subscriber"
		description="IEC-104 Subscriber Wire Component">
		
		<AD
			id="iec104.enabled"
			name="iec104.enabled"
			type="Boolean"
			cardinality="1"
			required="true"
			default="false"
			description="Enable connection">
		</AD>
		
		<AD id="iec104.device-id"
			name="iec104.device-id"
			type="String"
			cardinality="0"
			required="true"
			default="myDeviceId"
			description="Device Identifier">
		</AD>
		
		<AD id="iec104.host"
			name="iec104.host"
			type="String"
			cardinality="0"
			required="true"
			default="127.0.0.1"
			description="Host for IEC-104 Server">
		</AD>

		<AD id="iec104.port"
			name="iec104.port"
			type="Integer"
			cardinality="0"
			required="true"
			default="2404"
			description="Port for IEC-104 Server">
		</AD>
		
		<AD id="iec104.common-addr"
			name="iec104.common-addr"
			type="Integer"
			cardinality="0"
			required="true"
			default="0"
			description="Common Address for IEC-104 Server">
		</AD>
		
        <AD id="iec104.delay"
			name="iec104.delay"
			type="Integer"
			cardinality="0"
			required="true"
			default="5"
			min="1"
			max="60"
			description="Reconnect delay (seconds , min=1 , max=60)">
		</AD>
		
        <AD id="iec104.genint"
			name="iec104.genint"
			type="Boolean"
			cardinality="1"
			required="true"
			default="false"
			description="General interrogation after connect">
		</AD>
		
        <AD
			id="iec104.info-alert"
			name="iec104.info-alert"
			type="Boolean"
			cardinality="1"
			required="true"
			default="true"
			description="Enable information alerts">
		</AD>	
		
        <AD
			id="iec104.error-alert"
			name="iec104.error-alert"
			type="Boolean"
			cardinality="1"
			required="true"
			default="true"
			description="Enable malfunction alerts">
		</AD>
      
        <AD
			id="iec104.enrichment-filter"
			name="iec104.enrichment-filter"
			type="Boolean"
			cardinality="1"
			required="true"
			default="false"
			description="Exclude data messages not matched by enrichment rules">
		</AD>	
      
        <AD
			id="iec104.enrichment"
			name="iec104.enrichment"
			type="String"
			cardinality="1"
			required="false"
			default="&lt;config&gt;&#10;
      &lt;!-- ==================================================================================================================== --&gt;&#10;
      &lt;!-- Enrichment configuration syntax :                                                                                                                                                                                                              --&gt;&#10;
      &lt;!--    - Add zero or exactly one &lt;alert&gt; element to add metrics to all ALERT messages                                                                      --&gt;&#10;
      &lt;!--    - Add zero or exactly one &lt;default&gt; element to add metrics to all DATA messages with unmatching IOA                    --&gt;&#10;
      &lt;!--    - Add zero or more &lt;matching&gt; elements to add metrics to DATA message with matching IOA                                  --&gt;&#10;
      &lt;!--    - Additional metrics are given as attribute/value pairs in XML elements. The following attribute names are reserved:                                                                     --&gt;&#10;
      &lt;!--       id | host | port | eventId | event | message | type | test | cot | oa | ca | ioa | val | qual | time                                                                                                                               --&gt;&#10;
      &lt;!-- ==================================================================================================================== --&gt;&#10;
      &lt;!-- Example configuration :                                                                                                                                                                                                                               --&gt;&#10;
      &lt;!--    &lt;alert  metric1=&quot;value1&quot;  metric2=&quot;value2&quot;  ...  metricN=&quot;valueN&quot; /&gt;                                                                                                                                                   --&gt;&#10;
      &lt;!--    &lt;default  metric1=&quot;value1&quot;  metric2=&quot;value2&quot;  ...  metricN=&quot;valueN&quot; /&gt;                                                                                                                                               --&gt;&#10;
      &lt;!--    &lt;matching  ioa=&quot;integer&quot;  metric1=&quot;value1&quot;  metric2=&quot;value2&quot;  ...  metricN=&quot;valueN&quot; /&gt;                                                                                                                   --&gt;&#10;
      &lt;!-- ==================================================================================================================== --&gt;&#10;&lt;/config&gt;"
			description="XML configuration for messages enrichment rules|TextArea">
		</AD>
		
	</OCD>
	
	<Designate pid="org.falpi.kura.wires.component.iec104.Iec104Subscriber" factoryPid="org.falpi.kura.wires.component.iec104.Iec104Subscriber">
		<Object ocdref="org.falpi.kura.wires.component.iec104.Iec104Subscriber"/>
	</Designate>
</MetaData>